---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PodcastSmall from '../components/PodcastSmall.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const title = Astro.props.title 
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
      <h1>{title}</h1>
      <slot />
		</main>
		<Footer />
	</body>
</html>


<style>
h1{
  background: linear-gradient(to bottom , white, 70%, var(--accent) );
    -webkit-background-clip: text; /* para compatibilidad*/
    -webkit-text-fill-color: transparent; /* para compatibilidad*/
    background-clip: text;
    color: transparent;
  }

  </style>
