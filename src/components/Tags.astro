---
const { tag } = Astro.props;
---

<li>
  <a href={`/tags/${tag}`}>{tag}</a>
</li>



<style>

  li {
    display: inline-block;
    background-color: var(--accent);
    padding:1em;
    border-radius: 0.4em;
    transition: 0.2s ease;
  }
  li:hover{
    box-shadow: var(--box-shadow);
  }
  a {
    color: var(--accent-dark);
    text-decoration: none;
  }
  li:hover a{
    color: var(--gray-dark);
  }
</style>
