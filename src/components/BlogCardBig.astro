---
import { Image } from "astro:assets";
import FormattedDate from './FormattedDate.astro';
import BlogCardBig from './BlogCardBig.astro';

const { post } = Astro.props;
---


<li client:visible>
  <a href={`/blog/${post.slug}/`}>
    <Image transition:name={`${post.data.title}-image`}  src={post.data.heroImage} alt={post.data.title} width={720} height={360}>
    <h4 class="title" transition:name={`${post.data.title}-title`} >{post.data.title}</h4>
    <p class="date">
    <FormattedDate date={post.data.pubDate} />
    </p>
  </a>
</li>


<style>
  .hero-image:hover {
    box-shadow: var(--box-shadow);
  }
  li{
    animation: fadeIn 1s;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
